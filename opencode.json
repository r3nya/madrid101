{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  },
  "formatter": {
    "biome": {
      "command": ["npm", "run", "biome:format"],
      "extensions": [
        ".js",
        ".ts",
        ".jsx",
        ".tsx",
        ".json",
        ".astro",
        ".md",
        ".mdx"
      ]
    }
  },
  "command": {
    "build": {
      "template": "Run npm run build to build the project",
      "description": "Build the project"
    },
    "lint": {
      "template": "Run npm run biome:check to check code formatting and linting",
      "description": "Check code formatting and linting"
    },
    "format": {
      "template": "Run npm run biome:format to format code",
      "description": "Format code with biome"
    }
  }
}
