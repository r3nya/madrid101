{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [".astro", "dist"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "useEditorconfig": true,
    "attributePosition": "multiline",
    "indentStyle": "space",
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
